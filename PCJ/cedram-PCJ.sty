    % Declare a PCI, use starred version if co-edited with UGAE.
    \NewDocumentCommand {\addPCI} { s m m } {
        \prop_gput:Nnn \cdr_PCIs_prop {#2} {#3}
        \IfBooleanT {#1} {\seq_gput_right:Nn \cdr_UGAE_seq {#2}}
    }

    % Set current PCI for an article, and set \ifcdr@UGAE accordingly.
    \NewDocumentCommand {\setPCI} {m} {
        \tl_set:Nn \cdr_PCI_tl {#1}
        \seq_if_in:NnTF \cdr_UGAE_seq {#1} {\cdr@UGAEtrue} {\cdr@UGAEfalse}
    }

    % Full name of the current PCI, to use in the template
    \NewDocumentCommand {\PCIname} {} {
        \prop_get:NVNTF \cdr_PCIs_prop \cdr_PCI_tl \l_tmpa_tl {\l_tmpa_tl} {\MissingInfo{ERROR}}
    }

